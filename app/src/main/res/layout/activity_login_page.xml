<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_bg"
    tools:context=".LoginPage">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_50dp"
        android:textSize="@dimen/activity_margin_35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/activity_margin_80dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Kitchen Stories"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_margin_30dp"
        android:textSize="@dimen/activity_margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/activity_margin_20dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="- Where every dish has a story to tell..."/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/activity_margin_30dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/food_preparation"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/googleSignIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/app_background"
        app:cardCornerRadius="@dimen/activity_margin_25dp"
        app:cardElevation="@dimen/activity_margin_10dp"
        android:layout_margin="@dimen/activity_margin_30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sign_in_with_google"
                android:textSize="@dimen/activity_margin_20dp"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>