<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/activity_margin_20dp"
        app:cardCornerRadius="@dimen/activity_margin_20dp"
        android:padding="@dimen/activity_margin_10dp"
        app:cardElevation="@dimen/activity_margin_2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_margin_10dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_margin_25dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:text="dummy text"
                android:layout_weight="1"
                android:paddingStart="@dimen/activity_margin_10dp"/>
            <TextView
                android:id="@+id/moveToNext"
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:layout_marginEnd="@dimen/activity_margin_25dp"
                android:textSize="@dimen/activity_margin_25dp"
                android:text=">>"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/dietary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_margin_16dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:text="dummy text"
                    android:paddingStart="@dimen/activity_margin_10dp"/>
                <TextView
                    android:id="@+id/prepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_margin_16dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:text="dummy text"
                    android:paddingStart="@dimen/activity_margin_10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>